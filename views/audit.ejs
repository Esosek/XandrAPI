<!DOCTYPE html>
<html>

<head>
    <title>Audit | Xandr API</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <header class="navbar">
        <div class="container">
            <span class="navbar-brand mb-0 h1">Xandr API</span>
            <ul class="navbar-nav flex-row">
                <li class="nav-item">
                    <a class="nav-link" href="#">Audit</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Inventory</a>
                </li>
            </ul>
        </div>
    </header>

    <div class="container mt-4">
        <h1 class="text-center mb-4">Domain Audit</h1>
        <form method="POST" action="/audit">
            <div class="mb-3">
                <input type="text" class="form-control" id="urls" name="urls" placeholder="Enter URLs">
                <div id="url-help" class="form-text">You may put in multiple domains separated by comma. Example:
                    "domain1.cz,domain2.com,domain3.eu"</div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

    <% if(results.length> 0) { %>
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Domain</th>
                        <th scope="col">Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% results.forEach(result=> { %>
                        <tr>
                            <td>
                                <%= result.domain %>
                            </td>
                            <td title="<%= result.reason %>">
                                <%= result.status %>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
                <caption class="form-text">Tip: Hover over status to get a detailed description</caption>
            </table>
        </div>
        <% } %>
</body>

</html>